{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.ts", "use": "@vercel/static-build" }
  ],
  "env": {
    "VITE_BACKEND_URL": "https://ai-aptitude-backend.onrender.com"
  },
  "framework": "vite",
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "rootDirectory": "client",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
