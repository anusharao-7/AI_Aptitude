{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.ts", "use": "@vercel/static-build" }
  ],
  "env": {
    "VITE_BACKEND_URL": "https://ai-aptitude-backend.onrender.com"
  },
  "framework": "vite",
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
