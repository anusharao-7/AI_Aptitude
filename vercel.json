{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "buildCommand": "npm install && npm run build:client",
  "outputDirectory": "dist",
  "env": {
    "VITE_BACKEND_URL": "https://ai-aptitude-backend.onrender.com"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
